@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/jquery-1.12.3.min.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" /> 
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/common.js"></script>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/common.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="signin">
            <div class="signin-box">
                <h2>
                    欢迎登录 
                </h2><hr />
                    <div class="form-group row">
                        <label class="col-sm-2 control-label" for="username">用户名</label><div class="col-sm-4">
                            <input id="txtUserName" type="text" class="col-sm-2 form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label" for="passwd">密码</label><div class="col-sm-4">
                            <input id="txtPassWord" type="password" class="col-sm-2 form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div><div class="col-sm-2">
                            <input type="button" value="登 入" id="btnLogin" class="btn btn-primary col-sm-2 form-control" />
                        </div>
                    </div>
                
            </div>
        </div>
    </div>



    
    
    <script type="text/javascript">
        $(document).ready(function () {


        
            $("#btnLogin").click(function (e) {

                var username = $("#txtUserName").val();
                var password = $("#txtPassWord").val();
                $.post('@Url.Action("Login")', { UserName: username,PassWord:password },
                      function (res) {
                          if (res.IsSuccess) {
                              alert("登录成功");
                              document.location.href = '@Url.Action("Index","Home")';
                          }
                          else {
                              alert(res.Msg);
                          }
                      },
                      "json"
                );
            });
        });
    </script>
</body>
</html>
