
@{
    ViewBag.Title = "TaskList";
}
@model TaskManager.Entity.Tu_Users
<html>
<head>
    <script src="~/Scripts/jquery-1.12.3.min.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/common.js"></script>

</head>
<body> 
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">登录名</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m=>m.UserName, new { Class = "form-control"})
                @Html.HiddenFor(m=>m.UserId)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">名字</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.RealName, new { Class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.PassWord, new { Class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">状态</label>
            <div class="col-sm-9">
                @Html.DropDownListFor(m => m.Status, (List<SelectListItem>)ViewBag.StatusList, new { Class = "form-control" })
            </div>
        </div>
       
       
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-9">
                <input class="btn btn-default btnAdd" type="button" value="保存">
            </div>
        </div>

    </form>
    <script>

        $(document).ready(function () {
            

            var isSubmit = false;
            $(".btnAdd").click(function () {


                if (isSubmit)
                {
                    alert("你不要急，已经提交过了，等会");
                    return false;
                }
            
                isSubmit = true;
                var data = $("form").serializeArray();


                $.ajax({
                    type: "POST",
                    url: '@Url.Action("SaveUser")',
                    data: data,
                    dataType: "json",
                    success: function (data) {
                        isSubmit = false;
                        if (data.IsSuccess == 1) {
                            if (onSuccess)
                                onSuccess();
                             
                        } else {
                            alert('保存失败');
                        }
                    },
                    error: function () {
                        alert('保存失败,系统异常');
                        isSubmit = false;
                    }
                });
                return false;
            });
        });
    </script>
</body>
</html>